{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "description": "A simple bar chart with embedded data.",
  "data": {
    "url": "inflate_1_bit.csv"
  },
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Error",
      "sort": "-y",
      "title": "Error Type"
    },
    "y": {
      "field": "Percentage",
      "title": "Rate of Failure",
      "axis": {"format": ".0%"},
      "type": "quantitative"
    },
    "color": {
      "field": "Bits",
      "title": "First Bit"
    },
    "xOffset": {
      "field": "Bits"
    }
  },
  "transform": [ 
    {"filter": "datum.Count > 0 && datum.Error != 'Success'"},
    {"calculate": "datum.Count / 1000000000", "as": "Percentage"}
  ]
}
