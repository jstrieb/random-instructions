{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "data": {
    "url": "thresholds.csv"
  },
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Size",
      "title": "Buffer Size (bytes)",
      "sort": null
    },
    "y": {
      "field": "Percent",
      "title": "Buffers Disassembled",
      "axis": {"format": ".0%"},
      "type": "quantitative"
    }
  },
  "transform": [ 
    {"filter": "datum.Type == 'Disassembled' && datum.Size > 4 && datum.Threshold == 100"},
    {"calculate": "datum.Count / 1000000000", "as": "Percent"}
  ]
}

