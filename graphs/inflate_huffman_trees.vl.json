{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "data": {
    "url": "inflate.csv"
  },
  "config": {
    "legend": { "labelLimit": 420 },
    "axis": { "labelLimit": 420 }
  },
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Error",
      "sort": "-y",
      "title": "Error Type"
    },
    "y": {
      "field": "Percentage",
      "title": "Rate of Failure",
      "axis": {"format": ".0%"},
      "type": "quantitative"
    },
    "color": {
      "field": "Bits",
      "title": "First Three Bits",
      "legend": { 
        "labelExpr": "datum.value == 3 ? 'Static Huffman Code' : 'Dynamic Huffman Code'"
      }
    },
    "xOffset": {
      "field": "Bits"
    }
  },
  "transform": [ 
    {"filter": "datum.Count > 0 && datum.Error != 'Success' && (datum.Bits == 3 || datum.Bits == 5)"},
    {"calculate": "datum.Count / 1000000000", "as": "Percentage"}
  ]
}
