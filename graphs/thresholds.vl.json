{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "data": {
    "url": "thresholds.csv"
  },
  "config": {
    "legend": { "labelLimit": 420 },
    "axis": { "labelLimit": 420 }
  },
  "mark": "line",
  "encoding": {
    "x": {
      "field": "Threshold Scaled",
      "title": "Minimum Disassembly Threshold",
      "axis": {"format": ".0%"},
      "type": "quantitative",
      "sort": "descending"
    },
    "y": {
      "field": "Percent",
      "title": "Buffers Disassembled",
      "axis": {"format": ".0%"},
      "type": "quantitative"
    },
    "color": {
      "field": "Size",
      "title": "Size (bytes)",
      "sort": null
    }
  },
  "transform": [ 
    {"filter": "datum.Type == 'Disassembled' && datum.Size > 4"},
    {"calculate": "datum.Threshold / 100", "as": "Threshold Scaled"},
    {"calculate": "datum.Count / 1000000000", "as": "Percent"}
  ]
}

