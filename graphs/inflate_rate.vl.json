{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "data": {
    "url": "thresholds.csv"
  },
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Size",
      "sort": null,
      "title": "Buffer Size (bytes)"
    },
    "y": {
      "field": "Percentage",
      "axis": {"format": ".2%"},
      "type": "quantitative",
      "title": "Buffers Decompressed"
    }
  },
  "transform": [ 
    {"filter": "datum.Type == 'Decompressed' && datum.Threshold == 100"},
    {"calculate": "datum.Count / 1000000000", "as": "Percentage"}
  ]
}
