{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "data": {
    "url": "architectures.csv"
  },
  "config": {
    "legend": { "labelLimit": 420 },
    "axis": { "labelLimit": 420 }
  },
  "mark": "bar",
  "encoding": {
    "x": {
      "field": "Instruction Set Architecture",
      "sort": "-y"
    },
    "y": {
      "field": "Percent",
      "title": "Buffers Disassembled",
      "axis": {"format": ".0%"},
      "type": "quantitative",
      "aggregate": "max"
    }
  },
  "transform": [ 
    {"filter": "datum.Type == 'Disassembled' && datum.Size == 4 && datum.Threshold == 100"},
    {"calculate": "replace(datum.Architecture, 'CS_ARCH_', '')", "as": "Instruction Set Architecture"},
    {"calculate": "datum.Count / 10000000", "as": "Percent"}
  ]
}
